# MMH v3.1 Environment Variables
# Copy to .env and fill in your values
# CRITICAL: Never commit .env to git!

# General
MMH_INSTANCE_ID=mmh-node-1
MMH_ENVIRONMENT=production
MMH_DRY_RUN=true

# Redis (REQUIRED: set a strong password)
REDIS_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
MMH_REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379

# PostgreSQL (REQUIRED: set a strong password)
DB_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
MMH_POSTGRES_DSN=postgresql://mmh:${DB_PASSWORD}@localhost:5432/mmh

# Grafana
GRAFANA_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD

# Wallet Management (CRITICAL: keep these safe!)
# Solana: base58-encoded private key (64 bytes)
MMH_SOLANA_PRIVATE_KEY=
# EVM: hex-encoded private key (with 0x prefix)
MMH_EVM_PRIVATE_KEY=

# Solana
MMH_SOLANA_RPC_URL=
MMH_SOLANA_WS_URL=
MMH_HELIUS_API_KEY=
MMH_HELIUS_WS_URL=
MMH_BIRDEYE_API_KEY=
MMH_PUMPPORTAL_WS_URL=wss://pumpportal.fun/api/data
MMH_JITO_TIP_LAMPORTS=10000

# Base/EVM
MMH_BASE_RPC_URL=
MMH_BASE_WS_URL=
MMH_ALCHEMY_API_KEY=
MMH_ZEROX_API_KEY=

# Telegram
MMH_TELEGRAM_BOT_TOKEN=
MMH_TELEGRAM_CHAT_ID=

# Risk (SAFETY > PROFIT)
MMH_MAX_PORTFOLIO_EXPOSURE_USD=500.0
MMH_DAILY_LOSS_LIMIT_USD=200.0

# Observability
MMH_LOG_LEVEL=INFO
MMH_LOG_FORMAT=json
MMH_PROMETHEUS_PORT=8000
